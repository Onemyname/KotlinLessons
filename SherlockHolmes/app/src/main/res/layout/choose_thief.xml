<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_primary70">

    <RadioGroup
        android:id="@+id/groupOfAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kolbasa"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radioButton_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Vaska"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="488dp" />

        <RadioButton
            android:id="@+id/radioButton_john"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/John"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="550dp" />

        <RadioButton
            android:id="@+id/radioButton_watson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Watson"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_editor_absoluteY="546dp" />

    </RadioGroup>


    <ImageView
        android:id="@+id/kolbasa"
        android:layout_width="384dp"
        android:layout_height="306dp"
        android:adjustViewBounds="true"
        android:background="@drawable/cat"
        android:contentDescription="@string/kolbasa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>